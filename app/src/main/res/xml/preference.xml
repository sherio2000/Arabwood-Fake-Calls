<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:key="generalCategory" android:title="General">

        <ListPreference
            android:key="language"
            android:title="Language"
            app:useSimpleSummaryProvider="true"
            android:defaultValue="1"
            android:entries="@array/languages"
            android:entryValues="@array/languageValues">

        </ListPreference>

        <Preference
            android:key="@string/rate_us_pref_name"
            android:title="@string/rate_us_pref_name"/>
        <Preference
            android:key="policy"
            android:title="Policy"/>


    </PreferenceCategory>
    <PreferenceCategory android:key="voiceCallCategory" android:title="Voice Calls">
        <Preference
            android:summary="default"
            android:key="@string/ringtone_pref_name"
            android:title="@string/ringtone_pref_name" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/vibrate_switch_pref_name"
            android:title="@string/vibrate_switch_pref_name" />

        <Preference
            android:key="@string/clear_voice_history_pref_name"
            android:title="@string/clear_voice_history_pref_name"/>
    </PreferenceCategory>
</PreferenceScreen>